<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cart">

    <resultMap id="cart" type="app.entity.Cart">
        <result column="member_id" property="memberId" jdbcType="BIGINT" javaType="Long"/>
        <result column="product_id" property="productId" jdbcType="BIGINT" javaType="Long"/>
        <result column="product_quantity" property="productQuantity" jdbcType="BIGINT"
          javaType="Integer"/>
    </resultMap>

    <select id="select" parameterType="app.dto.comp.ProductAndMemberCompositeKey" resultMap="cart">
        SELECT *
        FROM cart
        WHERE member_id = #{memberId}
        and product_id = #{productId}
    </select>
    <select id="select-all-by-member" resultType="cart">
        SELECT *
        FROM cart
        WHERE member_id = #{memberId}
    </select>
    <select id="select-all" resultType="cart">
        SELECT *
        FROM cart
    </select>
    <insert id="insert" parameterType="cart">
        INSERT INTO cart (member_id, product_id, product_quantity)
        VALUES (#{memberId}, #{productId}, #{productQuantity})
    </insert>
    <update id="update" parameterType="cart">
        UPDATE cart
        SET product_quantity = #{productQuantity}
        WHERE member_id = #{memberId}, product_id = #{productId}
    </update>
    <delete id="delete" parameterType="app.dto.comp.ProductAndMemberCompositeKey">
        DELETE
        FROM cart
        WHERE member_id = #{memberId}
        and product_id = #{productId}

    </delete>

</mapper>






