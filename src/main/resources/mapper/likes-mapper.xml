<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="likes">

    <parameterMap id="ProductAndMemberCompositeKey" type="map">
        <parameter property="memberId" javaType="Long" jdbcType="BIGINT"/>
        <parameter property="productId" javaType="Long" jdbcType="BIGINT"/>
    </parameterMap>

    <select id="select" parameterType="ProductAndMemberCompositeKey" resultType="likes">
        SELECT *
        FROM likes
        WHERE member_id = #{memberId}
          and product_id = #{productId}
    </select>
    <select id="selectall" resultType="likes">
        SELECT *
        FROM likes
        WHERE member_id = #{memberId}
    </select>
    <insert id="insert" parameterType="likes">
        INSERT INTO likes (member_id, product_id)
        VALUES (#{memberId}, #{productId})
    </insert>
    <delete id="delete" parameterType="app.dto.comp.ProductAndMemberCompositeKey">
        DELETE
        FROM likes
        WHERE member_id = #{memberId}
          and product_id = #{productId}
    </delete>

</mapper>






