<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="delivery">

    <select id="select" parameterType="Long" resultType="delivery">
        SELECT *
        FROM delivery
        WHERE order_id = #{orderId}
    </select>
    <select id="selectall" resultType="delivery">
        SELECT *
        FROM delivery
    </select>
    <insert id="insert" parameterType="delivery">
        INSERT INTO delivery (road_name, addr_detail, zip_code, status)
        VALUES (#{roadName}, #{addrDetail}, #{zipCode}, #{status})
    </insert>
    <update id="update" parameterType="delivery">
        UPDATE delivery
        SET status = #{status}, updated_at = now()
        WHERE order_id = #{orderId}
    </update>
    <delete id="delete" parameterType="Long">
        DELETE
        FROM delivery
        WHERE order_id = #{orderId}
    </delete>

</mapper>






