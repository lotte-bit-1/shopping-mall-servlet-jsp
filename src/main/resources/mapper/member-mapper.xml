<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

    <resultMap id="BaseResultMap" type="member">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="money" jdbcType="BIGINT" property="money"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt"/>
    </resultMap>

    <resultMap id="OrderMemberDetail" type="app.dto.response.OrderMemberDetail">
        <result property="id" column="m.id"/>
        <result property="email" column="m.email"/>
        <result property="name" column="m.name"/>
        <result property="money" column="m.money"/>
        <association property="address" javaType="app.dto.response.AddressDetail">
            <result property="isDefault" column="a.isDefault"/>
            <result property="roadName" column="a.roadName"/>
            <result property="addrDetail" column="a.addrDetail"/>
            <result property="zipCode" column="a.zipCode"/>
        </association>
        <collection property="coupons" ofType="app.dto.response.CouponDetail">
            <result property="name" column="c.name"/>
            <result property="discountPolicy" column="c.discount_policy"/>
            <result property="discountValue" column="c.discount_value"/>
            <result property="status" column="c.status"/>
        </collection>
    </resultMap>

    <select id="select" parameterType="Long" resultMap="BaseResultMap">
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>

    <select id="selectByEmailAndPassword" parameterType="app.dto.request.LoginDto" resultMap="BaseResultMap">
        SELECT *
        FROM member
        WHERE email = #{email}
          AND password = #{password}
    </select>

    <select id="selectByEmail" parameterType="String" resultMap="BaseResultMap">
        SELECT *
        FROM member
        WHERE email = #{email}
    </select>

    <select id="selectAddressAndCouponById" parameterType="Long" resultMap="OrderMemberDetail">
        SELECT
            m.id, m.email, m.name, m.money,
            a.is_default, a.road_name, a.addr_detail, a.zip_code,
            c.name, c.discount_policy, c.discount_value, c.status
        FROM
            member m LEFT OUTER JOIN coupon c
                                     ON m.id = c.member_id,
            address a
        WHERE m.id = a.member_id
          AND m.id = #{id}
          AND a.is_default = '1'
          AND status = 'UNUSED'

    </select>

    <select id="selectall" resultType="member">
        SELECT *
        FROM member
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="member">
        INSERT INTO member (email, password, name, money)
        VALUES (#{email}, #{password}, #{name}, #{money})
    </insert>
    <update id="update" parameterType="member">
        UPDATE member
        SET email      = #{email},
            password   = #{password},
            name       = #{name},
            money      = #{money},
            updated_at = now()
        WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="Long">
        DELETE
        FROM member
        WHERE id = #{id}
    </delete>

</mapper>






